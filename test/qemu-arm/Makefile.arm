# Makefile for building ARM unit host (used inside container or on ARM system)
# This builds the actual ARM binary using cross-compilation

# ARM cross-compiler
CC := arm-linux-gnueabihf-gcc
CXX := arm-linux-gnueabihf-g++

# Compiler flags
CFLAGS := -std=c11 -O2 -Wall -Wextra -g
CXXFLAGS := -std=c++17 -O2 -Wall -Wextra -g

# Optional PERF_MON support (passed from command line)
ifeq ($(PERF_MON),1)
  CFLAGS += -DPERF_MON
  CXXFLAGS += -DPERF_MON
endif

LDFLAGS := -lsndfile -ldl -lm -pthread

# Source files
C_SOURCES := unit_host.c wav_file.c sdk_stubs.c
OBJECTS := $(C_SOURCES:.c=.o)

# Output binary
TARGET := unit_host_arm

# Build target
all: $(TARGET)

$(TARGET): $(OBJECTS)
	@echo "Linking ARM executable..."
	$(CC) $(CFLAGS) -o $@ $^ $(LDFLAGS)
	@echo "Build complete: $(TARGET)"

# Compile C sources
%.o: %.c
	@echo "Compiling $<..."
	$(CC) $(CFLAGS) -c $< -o $@

# Clean
clean:
	rm -f $(OBJECTS) $(TARGET)

.PHONY: all clean
